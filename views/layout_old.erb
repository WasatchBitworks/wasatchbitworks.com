<!doctype html>
<html lang="en-US">
  <head>
    <title>Wasatch Bitworks</title>
    <meta charset="UTF-8">

    <!-- TailwindCSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Optional: Custom Tailwind config -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              bizworks: '#1a202c', // Example of adding custom color later if you want
            }
          }
        }
      }
    </script>

    <!-- Remove this if you had custom styles -->
    <!-- <link rel="stylesheet" href="/stylesheets/application.css"> -->

  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">

    <!-- Navigation -->
    <nav class="bg-white shadow mb-6">
      <ul class="flex space-x-6 p-4">
        <li><a class="text-gray-700 hover:text-blue-600" href="/home">Home</a></li>
        <li><a class="text-gray-700 hover:text-blue-600" href="/expenses">Expense Tracking</a></li>
        <li><a class="text-gray-700 hover:text-blue-600" href="/income">Income Tracker</a></li>
        <li><a class="text-gray-700 hover:text-blue-600" href="/invoices">Invoices</a></li>
      </ul>
    </nav>

    <!-- Header -->
    <header class="text-center mb-8">
      <h2 class="text-2xl font-bold text-gray-800">Bizworks - Business Solutions</h2>
      <div class="mt-2">
        <%== yield_content :header_links %>
      </div>
    </header>

    <!-- Flash Messages -->
    <% if session[:error] %>
      <div class="max-w-lg mx-auto mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="max-w-lg mx-auto mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="flex-grow max-w-4xl mx-auto p-4">
      <%== yield %>
    </main>

   <!-- Footer -->
    <footer class="bg-white shadow mt-8">
      <div class="max-w-4xl mx-auto px-4 py-6 flex flex-col md:flex-row items-center justify-between text-gray-600 text-sm">
        <p class="mb-2 md:mb-0">&copy; <%= Time.now.year %> Wasatch Bitworks LLC. All rights reserved.</p>
      <div class="flex space-x-4">
        <a href="/privacy" class="hover:text-blue-600">Privacy Policy</a>
        <a href="/terms" class="hover:text-blue-600">Terms of Service</a>
      </div>
    </div>
  </footer>

  </body>
</html>


